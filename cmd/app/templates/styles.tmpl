{{ define "styles" }}
:root {
    --color-gray: #a0a0a0;
    --color-primary: #fefff8;
    --color-primary-text: #030303;
    --color-secondary: #1db2d1;
    --color-tertiary: #0b9ab9;
    --font-family: "Helvetica Neue", sans-serif;
    --font-size: 14pt;
}

* {
    box-sizing: border-box;
    font-family: var(--font-family);
    font-size: var(--font-size);
    margin: 0;
    padding: 0;
    text-decoration: none;
}

body {
    align-items: center;
    background: var(--color-primary);
    color: var(--color-primary-text);
    display: flex;
    flex-flow: column;
    height: 100%;
    justify-content: center;
    line-height: 1.5rem;
    word-spacing: 0.25rem;
    margin: 0;
    padding: 0;
    position: absolute;
    width: 100%;
}

a,
button {
    align-items: center;
    background: var(--color-secondary);
    border: none;
    border-radius: 0.5rem;
    box-shadow: 0 0.25rem var(--color-tertiary);
    color: var(--color-primary);
    display: flex;
    font-weight: bold;
    height: 32px;
    justify-content: center;
    margin: 0.5rem;
    padding: 1rem 0.95rem;
    position: relative;
    width: fit-content;
}

a:hover,
button:hover {
    box-shadow: 0 0.125rem var(--color-tertiary);
    top: 0.125rem;
}

div {
    align-items: center;
    display: flex;
    flex-flow: column;
    justify-content: center;
}

h1 {
    align-items: center;
    color: var(--color-secondary);
    display: flex;
    font-size: 32pt;
    margin: 1rem;
    text-align: center;
}

h1 > img {
    margin-right: 1rem;
}

h2 {
    color: var(--color-primary-text);
    font-size: 24pt;
    margin: 1rem;
    text-align: center;
}

p {
    font: 24pt;
}
{{ end }}
